<div class="uk-grid-column-small uk-grid-row-small uk-child-width-1-3@s uk-text-center" uk-grid>


<div class="uk-card uk-card-small uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
    <div class="uk-card-media-left uk-cover-container">
        <img src="{{ asset('uploadimg/') }}{{ book.coverImg }}" alt="" uk-cover>
        <canvas width="600" height="400"></canvas>
    </div>
    <div>
        <div class="uk-card-body">
            <h3 class="uk-card-title">{{ book.title }}</h3>
            <p>Nb of pages {{ book.nbpages }}</p>
            <p>Published on {{ book.publishedAt|date('Y-m-d') }}</p>
            <p>Written by {{ book.author.firstName }} {{ book.author.lastName }}</p>
            <button class="uk-button uk-button-default uk-button-small"><a href="{{ path ('admin_author', {'id': book.author.id}) }}">See author's card</a></button>
        </div>
    </div>
</div>
</div>