<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <!-- UIkit CSS -->
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.15.0/dist/css/uikit.min.css" />
        {% endblock %}

        {% block header %}
            <header>
                <nav class="uk-navbar-container uk-margin" uk-navbar="mode: click">
                    <div class="uk-navbar-left uk-margin-medium-left	">

                        <ul class="uk-navbar-nav">
                            <li class="uk-active"><a href="{{ path ('books')}}">Home</a></li>

                            <li><a href="{{ path ('authors')}}">Authors</a></li>
                            <li><a href="{{ path ('books')}}">Books</a></li>
                        </ul>
                        <div class="uk-navbar-item">
                            <form role="search" method="GET" action="{{ path('search_books') }}">
                                <input class="uk-input uk-form-width-small" type="text" name="search" placeholder="Input">
                                <button class="uk-button uk-button-default js-night" type="submit">Search</button>
                            </form>
                        </div>

                    </div>


                </nav>

            </header>
        {% endblock %}

        {% for message in app.flashes('success') %}
            <p class="flash">{{ message }}</p>
        {% endfor %}


        {% block main %}
        {% endblock %}




        {% block javascripts %}
            <!-- UIkit JS -->
            <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.0/dist/js/uikit.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.0/dist/js/uikit-icons.min.js"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
