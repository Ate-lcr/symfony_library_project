{% extends 'base.html.twig' %}


{% block main %}
    <div class="uk-card uk-card-default uk-card-body uk-width-1-2@m uk-align-center uk-text-center">


    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">

        <div class="uk-margin">
            <div class="uk-inline">
                <span class="uk-form-icon" uk-icon="icon: user"></span>
                <input class="uk-input" type="text" name="_username" value="{{ last_username }}">
            </div>
        </div>

        <div class="uk-margin">
            <div class="uk-inline">
                <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
                <input class="uk-input" type="password" id="password" name="_password">
            </div>
        </div>


        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button type="submit" class="uk-button uk-button-default">login</button>
    </form>
    </div>
{% endblock %}
